(define (domain blocks)
(:requirements :typing :equality :strips :negative-preconditions)
(:types 	block robot - object
)

(:predicates (on ?x - block ?y - block)
	(ontable ?x - block)
	(clear ?x - block)
	(handempty ?x - robot)
	(handfull ?x - robot)
	(holding ?x - block)
)

(:action pick-up
	:parameters (?x - block ?robot - robot)
	:precondition (and (clear ?x)
	(handempty ?robot)
	(not (handfull ?robot))
	(not (holding ?x))
	(ontable ?x))
	:effect (and (handfull ?robot)
		(holding ?x)
		(not (clear ?x))
		(not (handempty ?robot))
		(not (ontable ?x)) 
		))

(:action put-down
	:parameters (?x - block ?robot - robot)
	:precondition (and (clear ?x)
	(handfull ?robot)
	(not (handempty ?robot))
	(not (holding ?x))
	(ontable ?x))
	:effect (and (handempty ?robot)
		(not (handfull ?robot)) 
		))

(:action unstack
	:parameters (?x - block ?y - block ?robot - robot)
	:precondition (and (handempty ?robot)
	(not (clear ?x))
	(not (handfull ?robot))
	(not (holding ?x))
	(not (holding ?y))
	(not (on ?x ?y))
	(not (ontable ?y))
	(on ?y ?x)
	(ontable ?x)(not (= ?x ?y)))
	:effect (and (clear ?x)
		(handfull ?robot)
		(holding ?y)
		(not (clear ?y))
		(not (handempty ?robot))
		(not (on ?y ?x)) 
		))

)