(define (domain maze)
(:requirements :negative-preconditions :strips :equality :typing)
(:types 	player location - object
)

(:predicates (move-dir-up ?v0 - location ?v1 - location)
	(move-dir-down ?v0 - location ?v1 - location)
	(move-dir-left ?v0 - location ?v1 - location)
	(move-dir-right ?v0 - location ?v1 - location)
	(clear ?v0 - location)
	(at ?v0 - player ?v1 - location)
	(oriented-up ?v0 - player)
	(oriented-down ?v0 - player)
	(oriented-left ?v0 - player)
	(oriented-right ?v0 - player)
	(is-goal ?v0 - location)
)

(:action move_up
	:parameters (?p - player ?from - location ?to - location)
	:precondition (and )
	:effect (and (at ?p ?to)
		(clear ?from)
		(clear ?to)
		(move-dir-down ?to ?from)
		(move-dir-up ?from ?to)
		(not (at ?p ?from))
		(not (at ?p ?to))
		(not (clear ?to))
		(not (move-dir-down ?to ?from))
		(not (move-dir-up ?from ?to))
		(not (oriented-right ?p))
		(not (oriented-up ?p))
		(oriented-down ?p)
		(oriented-up ?p) 
		))

(:action move_down
	:parameters (?p - player ?from - location ?to - location)
	:precondition (and )
	:effect (and (at ?p ?from)
		(at ?p ?to)
		(clear ?from)
		(clear ?to)
		(move-dir-down ?from ?to)
		(move-dir-up ?to ?from)
		(not (at ?p ?from))
		(not (clear ?from))
		(not (clear ?to))
		(not (move-dir-down ?from ?to))
		(not (move-dir-up ?to ?from))
		(not (oriented-right ?p))
		(not (oriented-up ?p))
		(oriented-right ?p)
		(oriented-up ?p) 
		))

(:action move_left
	:parameters (?p - player ?from - location ?to - location)
	:precondition (and (clear ?to))
	:effect (and (at ?p ?to)
		(clear ?from)
		(move-dir-left ?from ?to)
		(move-dir-right ?to ?from)
		(not (at ?p ?from))
		(not (clear ?to))
		(not (is-goal ?to))
		(not (oriented-down ?p))
		(not (oriented-left ?p))
		(not (oriented-right ?p))
		(not (oriented-up ?p))
		(oriented-left ?p)
		(oriented-right ?p)
		(oriented-up ?p) 
		))

(:action move_right
	:parameters (?p - player ?from - location ?to - location)
	:precondition (and (clear ?to))
	:effect (and (at ?p ?from)
		(at ?p ?to)
		(clear ?from)
		(is-goal ?to)
		(move-dir-left ?to ?from)
		(move-dir-right ?from ?to)
		(not (at ?p ?from))
		(not (clear ?from))
		(not (clear ?to))
		(not (is-goal ?from))
		(not (move-dir-left ?to ?from))
		(not (move-dir-right ?from ?to))
		(not (oriented-down ?p))
		(not (oriented-right ?p))
		(not (oriented-up ?p))
		(oriented-down ?p)
		(oriented-right ?p)
		(oriented-up ?p) 
		))

)